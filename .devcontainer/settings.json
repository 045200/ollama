{
  //  --- 代码编辑辅助 ---

  "editor.formatOnSave": true,         //  保存时自动格式化代码 (强烈推荐，统一代码风格)
  "editor.defaultFormatter": "Dart SDK Formatter", //  默认代码格式化工具 (Dart 官方工具)
  "editor.codeActionsOnSave": {         //  保存时自动执行的代码操作
    "source.fixAll": true,           //  自动修复所有可修复的代码问题 (例如 lint 警告)
    "source.organizeImports": true     //  自动整理 import 语句 (保持 import 清晰)
  },
  "editor.tabSize": 2,               //  Tab 键缩进为 2 个空格
  "editor.detectIndentation": false,   //  关闭自动检测缩进
  "editor.insertSpaces": true,         //  使用空格代替 Tab
  "files.trimTrailingWhitespace": true, //  去除行尾空格
  "files.insertFinalNewline": true,    //  文件末尾插入新行
  "files.autoSave": "afterDelay",       //  自动保存
  "files.autoSaveDelay": 500,         //  自动保存延时 (毫秒)
  "editor.wordWrap": "wordWrapColumn", //  代码自动换行
  "editor.wordWrapColumn": 100,       //  换行列宽 (建议 100 或 120)
  "editor.wrappingIndent": "indent",    //  换行缩进方式

  //  --- 代码提示和补全 ---

  "editor.suggestSelection": "first",   //  代码提示默认选择第一个 (提高效率)
  "editor.snippetSuggestions": "top",    //  代码片段提示显示在顶部
  "editor.parameterHints.enabled": true, //  启用参数提示 (显示函数参数信息)
  "editor.hover.enabled": true,         //  启用悬停提示 (鼠标悬停显示代码信息)

  //  --- 错误检查和代码分析 ---

  "dart.flutterHotReloadOnSave": true, //  保存时自动热重载 (Flutter 必备)
  "dart.enableSdkFormatter": true,     //  启用 Dart SDK 格式化工具
  "dart.showLintNames": true,         //  显示 Lint 规则名称 (学习 Lint 规则)
  "problems.decorations.enabled": true, //  在编辑器中显示问题标记 (错误和警告)

  //  --- 代码导航和探索 ---

  "editor.minimap.enabled": true,       //  启用代码缩略图 (快速概览代码结构)
  "breadcrumbs.enabled": true,        //  启用面包屑导航 (显示当前文件路径)
  "editor.folding": true,             //  启用代码折叠 (折叠代码块，方便阅读)
  "editor.linkedEditing": true,        //  启用关联编辑 (修改 HTML 标签时同步修改配对标签)

  //  --- 用户界面 ---

  "workbench.iconTheme": "material-icon-theme", //  Material Icon Theme 图标主题
  "workbench.colorTheme": "Default Dark+",       //  默认深色主题
  "editor.fontSize": 14,               //  编辑器字体大小 (根据个人喜好调整)
  "editor.lineHeight": 22,             //  编辑器行高 (提高代码可读性)
  "terminal.integrated.fontSize": 14,    //  终端字体大小
  "terminal.integrated.lineHeight": 1.2,  //  终端行高
  "explorer.compactFolders": false,     //  关闭文件夹压缩 (更清晰地查看文件结构)
  "workbench.editor.enablePreview": false, //  关闭预览编辑器 (避免误操作)

  //  --- 其他 ---

  "search.smartCase": true,           //  搜索时智能大小写匹配
  "search.useRipgrep": true,          //  使用 ripgrep 引擎进行更快速的搜索 (如果可用)
  "git.autofetch": true,              //  启用 Git 自动拉取 (保持代码同步)
  "extensions.autoUpdate": true        //  自动更新 VS Code 扩展
}
